post_install() {
  _rmsymlink
  _mksymlink
}

post_upgrade() {
  post_install
}

post_remove() {
  _rmsymlink
}

_mksymlink() {
  echo -n "Symlinking electrum to /usr/bin/electrum... "
  ln -s /usr/share/electrum/electrum /usr/bin/electrum
  echo "done"
}

_rmsymlink() {
  echo -n "Removing symlinks..."
  rm -f /usr/bin/electrum
  echo "done"
}
