# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=chaiscript-boost
pkgver=4.2.0
pkgrel=1
pkgdesc="Embedded scripting language designed from the ground up to directly target C++, requires Boost"
arch=('any')
depends=('boost-libs')
makedepends=('boost' 'cmake')
url="http://www.chaiscript.com"
license=('BSD')
source=("https://github.com/downloads/ChaiScript/ChaiScript/chaiscript-$pkgver-Source.tar.bz2"
        "chaiscript-boost.install")
sha256sums=('2f1cae866734cc6fc75e529016158b3911310c2a3274dc1370badc792934295f'
            'bb8fabe58d3d95ab65205744f7ffb161f542f73733355fe8d860cd415e96db9a')
provides=('chai')
conflicts=('chaiscript')
install=chaiscript-boost.install

build() {
  cd "chaiscript-$pkgver-Source"

  msg 'Running cmake...'
  cmake ./ -DCMAKE_INSTALL_PREFIX=/usr

  msg 'Running make...'
  make chai
}

package() {
  cd "chaiscript-$pkgver-Source"

  msg 'Installing...'
  make DESTDIR="$pkgdir" install
}
