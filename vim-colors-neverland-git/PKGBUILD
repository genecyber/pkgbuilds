# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-colors-neverland-git
_gitname='vim-colors-neverland'
pkgver=1ebd170
pkgrel=1
pkgdesc="Exquisite dark colors with expressive syntax highlighting rules, for Vim"
arch=('any')
depends=('vim')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/trapd00r/neverland-vim-theme"
license=('custom:vim')
source=($_gitname::git+https://github.com/trapd00r/neverland-vim-theme)
sha256sums=('SKIP')
provides=('vim-colors-neverland' 'vim-neverland')
conflicts=('vim-neverland' 'vim-neverland-git')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

prepare() {
  cd $_gitname
  
  msg 'Removing unneeded files...'
  rm -f README*
}

package() {
  cd $_gitname

  msg 'Installing...'
  install -dm 755 ${pkgdir}/usr/share/vim/vimfiles/
  tar -c . | tar -x -C ${pkgdir}/usr/share/vim/vimfiles

  msg 'Cleaning up pkgdir...'
  find "$pkgdir" -type d -name .git -exec rm -r '{}' +
}
