# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=ethereum-git
pkgver=20140303
pkgrel=1
pkgdesc="Next-generation distributed cryptographic ledger"
arch=('i686' 'x86_64')
depends=('boost' 'boost-libs' 'crypto++' 'gmp' 'leveldb' 'openssl' 'qt5-base' 'secp256k1')
makedepends=('automake' 'cmake' 'gcc' 'git' 'yasm')
url="https://github.com/ethereum/cpp-ethereum"
license=('MIT')
source=(${pkgname%-git}::git+https://github.com/ethereum/cpp-ethereum
        miniupnpc-1.6.20120509.tar.gz::http://miniupnp.free.fr/files/download.php?file=miniupnpc-1.6.20120509.tar.gz
        Common.cpp.patch
        Dagger.cpp.patch
        VM.cpp.patch
        VM.h.patch)
sha256sums=('SKIP'
            'cd023862ae3882246102594fda7dc5efd4feb2531bf7903abc62aa02e76193d8'
            '1a1ba1ccaf81764767009cf5e2d9a408355654afb7d4cd56acc1b8a937b9c062'
            'df96fdfd62ef9936525617f89e25440b33b0afa840543d0cba8168f329d19fe5'
            '81efb595b7af316036acbef5953b2d8067ff5d2c28db0f2351b7f5637f7b9108'
            '98a67d99fc92c693bb7a01e0a1d8b772c54a68d88c9db2d75cb810b590782fd8')
provides=('alethzero' 'cpp-ethereum' 'ethereum')
conflicts=('alethzero' 'cpp-ethereum' 'ethereum')

pkgver() {
  cd ${pkgname%-git}
  git log -1 --format="%cd" --date=short | sed "s|-||g"
}

prepare() {
  cd ${pkgname%-git}

  msg 'Patching Common.cpp...'
  patch -p1 < ${srcdir}/Common.cpp.patch

  msg 'Patching Dagger.cpp...'
  patch -p1 < ${srcdir}/Dagger.cpp.patch

  msg 'Patching VM.cpp...'
  patch -p1 < ${srcdir}/VM.cpp.patch

  msg 'Patching VM.h...'
  patch -p1 < ${srcdir}/VM.h.patch

  msg 'Preparing miniupnpc...'
  tar -xvzf ${srcdir}/miniupnpc-1.6.20120509.tar.gz -C .
}

build() {
  cd ${pkgname%-git}

  msg 'Building miniupnpc...'
  make -C ./miniupnpc-1.6.20120509

  msg 'Building ethereum and alethzero...'
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DCPPFLAGS=-I/../miniupnpc-1.6.20120509/ -DLDFLAGS=-I/../miniupnpc-1.6.20120509/ ./
  make
}

package() {
  cd ${pkgname%-git}

  msg 'Installing...'
  make DESTDIR="$pkgdir" install

  msg 'Cleaning up pkgdir...'
  find "$pkgdir" -type d -name .git -exec rm -r '{}' +
  find "$pkgdir" -type f -name .gitignore -exec rm -r '{}' +
}
