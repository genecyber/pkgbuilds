# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-javascript-git
pkgver=v0.9.0.r7.g7e28dbd
pkgrel=1
pkgdesc="Vastly improves Vim's JavaScript indentation"
arch=('any')
depends=('vim')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/pangloss/vim-javascript"
license=('custom:vim')
source=(git+https://github.com/pangloss/vim-javascript)
sha256sums=('SKIP')
provides=('vim-javascript')
conflicts=('vim-javascript')
install=vimdoc.install

pkgver() {
  cd ${pkgname%-git}
  git describe --long --tags | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

prepare() {
  cd ${pkgname%-git}
  
  msg 'Removing stray files...'
  rm -rf extras
  rm README.md
}

package() {
  cd ${pkgname%-git}

  msg 'Installing...'
  install -dm 755 ${pkgdir}/usr/share/vim/vimfiles/
  tar -c . | tar -x -C ${pkgdir}/usr/share/vim/vimfiles

  msg 'Cleaning up pkgdir...'
  find "$pkgdir" -type d -name .git -exec rm -r '{}' +
}
