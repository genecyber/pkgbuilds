# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=python2-simpleconfig
_realname=simpleconfig
pkgver=1.0
pkgrel=1
pkgdesc="Dead simple configuration file parser"
arch=('any')
depends=('python2')
makedepends=('python2-setuptools')
url="http://kisom.github.io/pysimpleconfig/"
license=('ISC')
options=(!emptydirs)
source=(https://pypi.python.org/packages/source/s/$_realname/$_realname-$pkgver.tar.gz)
md5sums=('3495309bc03a8a319ebdca7185ef5035')
sha256sums=('08d6f9d43a92f292bdb79a89b8a5cffa819bf76e6a2273af21ae8e2e29d2a885')
provides=('simpleconfig')
conflicts=('simpleconfig' 'simpleconfig-git' 'pysimpleconfig')

build() {
  cd $srcdir/$_realname-$pkgver

  msg 'Building...'
  python2 setup.py build
}

package() {
  cd $srcdir/$_realname-$pkgver

  msg 'Installing...'
  python2 setup.py install --root="$pkgdir" --optimize=1 
}
