post_install() {
  chmod +x /usr/share/pyethereum/trie.py
  echo -n "Symlinking trie.py to /usr/bin/pyethereum..."
  ln -s /usr/share/pyethereum/trie.py /usr/bin/pyethereum
  echo "done"
}

post_upgrade() {
  post_remove
  post_install
}

post_remove() {
  echo -n "Removing symlinks..."
  rm -f /usr/bin/pyethereum
  echo "done"
}
