# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=wgetpkg
pkgver=0.0.1
pkgrel=1
pkgdesc="Downloads AUR packages with wget"
arch=('any')
depends=('perl')
url="https://github.com/atweiden/wgetpkg"
license=('Apache')
source=(wgetpkg)
sha256sums=('eeed1c3c32aa46c73b19cd567a774450f479d94e830a9687461161184b1d8fe0')
provides=('wgetpkg')
conflicts=('wgetpkg-git')

package() {
  cd $srcdir

  msg 'Installing executable...'
  install -D -m755 wgetpkg "${pkgdir}/usr/bin/wgetpkg"
}
