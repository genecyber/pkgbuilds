[Unit]
Description=Bitrated Web service
Requires=mongodb.service
After=mongodb.service

[Service]
Type=simple
PIDFile=/run/bitrated.pid
User=bitrated
Group=bitrated
WorkingDirectory=/usr/share/bitrated
ExecStart=/bin/bash /usr/share/bitrated/bin/start.sh &
ExecStop=/usr/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
