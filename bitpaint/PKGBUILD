pkgname=bitpaint
pkgver=0.0.1
pkgrel=1
pkgdesc="Colored Bitcoin and smart contracts script"
arch=('any')
depends=('bitcoin-daemon' 'bitcoin-qt' 'python2' 'python2-jsonrpc-bzr')
url="https://bitcointalk.org/index.php?topic=117630.0"
license=('AGPL')
source=(bitpaint.install
        bitpaint.py)
sha256sums=('54d42b007ea9f169a0ea162232311b9d62ff0f796849f4430870f0b6f8ea81b6'
            '9c6c2a3886500c81407d3bef8d86c045bf3235cec3e182a0e3245c93e58de341')
provides=('bitpaint')
install=bitpaint.install

package() {
  cd "$srcdir"
  install -D -m755 bitpaint.py "${pkgdir}/usr/bin/bitpaint"
}
