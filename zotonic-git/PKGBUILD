# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=zotonic-git
pkgver=0.0.0
pkgrel=1
pkgdesc="High speed, real-time Web framework and CMS, built with Erlang (latest development version)"
arch=('i686' 'x86_64')
url="http://zotonic.com/"
license=('Apache')
depends=('erlang' 'imagemagick' 'postgresql')
makedepends=('git' 'make' 'rebar-git')
optdepends=('exif: Enable image auto-rotation')
source=(git+https://github.com/zotonic/zotonic)
sha256sums=('SKIP')
provides=('zotonic')
conflicts=('zotonic')
install=zotonic.install

pkgver() {
  cd ${pkgname%-git}
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd ${pkgname%-git}

  msg 'Building...'
  make
}

package() {
  cd ${pkgname%-git}

  msg 'Installing...'
  mkdir -p "${pkgdir}"/opt/zotonic
  install -dm 755 ${pkgdir}/opt/zotonic
  tar -c . | tar -x -C ${pkgdir}/opt/zotonic

  msg 'Cleaning up pkgdir...'
  find "$pkgdir" -type d -name .git -exec rm -r '{}' +
  find "$pkgdir" -type f -name .gitignore -exec rm -r '{}' +
}
