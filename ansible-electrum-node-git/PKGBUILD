pkgname=ansible-electrum-node-git
pkgver=0.0.0
pkgrel=1
pkgdesc="Electrum node provisioning with Ansible (bitcoind and electrum-server)"
arch=('any')
depends=('ansible' 'openssh' 'sshpass')
makedepends=('git')
optdepends=('python2-keyczar: Run Ansible in Accelerated Mode')
url="https://github.com/atweiden/ansible-electrum-node"
license=('UNLICENSE')
source=(git+https://github.com/atweiden/ansible-electrum-node)
sha256sums=('SKIP')
provides=('ansible-electrum-node')
conflicts=('ansible-electrum-node')

pkgver() {
  cd ${pkgname%-git}
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {

}

package() {

}
