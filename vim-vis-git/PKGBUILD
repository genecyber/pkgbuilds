# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-vis-git
pkgver=20.r0.g6a87efb
pkgrel=1
pkgdesc="Extended Vim visual mode commands, substitutes, and searches"
arch=('any')
depends=('vim' 'vim-cecutil')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/vim-scripts/vis"
license=('MIT')
source=(${pkgname%-git}::git+https://github.com/vim-scripts/vis)
sha256sums=('SKIP')
provides=('vim-vis')
conflicts=('vim-vis')
install=vimdoc.install

pkgver() {
  cd ${pkgname%-git}
  git describe --long --tags | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

prepare() {
  cd ${pkgname%-git}
  
  msg 'Removing unneeded files...'
  rm -f README plugin/cecutil.vim
}

package() {
  cd ${pkgname%-git}

  msg 'Installing...'
  install -dm 755 ${pkgdir}/usr/share/vim/vimfiles/
  tar -c . | tar -x -C ${pkgdir}/usr/share/vim/vimfiles

  msg 'Cleaning up pkgdir...'
  find "$pkgdir" -type d -name .git -exec rm -r '{}' +
}
