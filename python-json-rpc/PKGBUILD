# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=python-json-rpc
pkgver=1.2
pkgrel=1
pkgdesc="JSON-RPC transport realisation"
arch=('i686' 'x86_64')
depends=('python')
makedepends=('python2-setuptools')
url="https://github.com/pavlov99/json-rpc"
license=('MIT')
options=(!emptydirs)
source=(https://pypi.python.org/packages/source/j/${pkgname#python-}/${pkgname#python-}-$pkgver.tar.gz)
md5sums=('cfcaff4ee9d2952e99578b596fb82887')
sha256sums=('634c4c0d92781b0930c09a01a6eed36c29210d3284dc3fc34ca8a138ad804e03')

build() {
  cd $srcdir/${pkgname#python-}-$pkgver

  msg 'Building...'
  python setup.py build
}

package() {
  cd $srcdir/${pkgname#python-}-$pkgver

  msg 'Installing...'
  python setup.py install --root="$pkgdir" --optimize=1
}
