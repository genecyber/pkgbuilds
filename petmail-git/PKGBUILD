# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=petmail-git
_gitname=petmail
pkgdesc="secure messaging, file-transfer, and directory synchronization"
pkgver=6247af9
pkgrel=1
url="https://github.com/warner/petmail"
license=('MIT')
depends=('python2' 'python2-pynacl' 'python2-scrypt' 'python2-zope-interface' 'twisted')
makedepends=('git')
source=(git+https://github.com/warner/petmail.git)
sha256sums=('SKIP')
provides=('petmail')
conflicts=('petmail')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

prepare() {
  cd $_gitname

  msg 'Fixing Python version...'
  find . -type f -print0 | xargs -0 sed -i 's#/usr/bin/python#/usr/bin/python2#g'
  find . -type f -print0 | xargs -0 sed -i 's#/usr/bin/env python#/usr/bin/env python2#g'
}

package() {
  cd $_gitname

  python2 setup.py build_deps
}
