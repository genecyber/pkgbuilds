# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=python2-commandr
pkgver=1.2.0
pkgrel=1
pkgdesc="Simple tool for making Python functions accessible from the command line"
arch=('any')
depends=('python2')
makedepends=('python2-setuptools')
url="https://github.com/tellapart/commandr"
license=('Apache')
options=(!emptydirs)
source=(https://pypi.python.org/packages/source/c/${pkgname#python2-}/${pkgname#python2-}-$pkgver.tar.gz)
md5sums=('2cd3feed94ba74160b3ba88a59bc4e24')
sha256sums=('3a016d15bc034951ba33edca1334bc93274295c71aed457048105c2359deef03')
provides=('commandr')
conflicts=('commandr')

package() {
  cd $srcdir/${pkgname#python2-}-$pkgver

  msg 'Installing...'
  python2 setup.py install --root="$pkgdir" --optimize=1 
}
