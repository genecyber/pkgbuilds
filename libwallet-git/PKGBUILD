# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=libwallet-git
_gitname=libwallet
pkgver=1489afc
pkgrel=1
pkgdesc="Bitcoin client side library for wallet functionality such as working with addresses, deterministic wallets and different key formats"
arch=('i686' 'x86_64')
makedepends=('git' 'gcc' 'libbitcoin-leveldb-git' 'make')
url="https://github.com/spesmilo/libwallet/"
license=('AGPL3')
source=(git+https://github.com/spesmilo/libwallet.git)
sha256sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $_gitname

  msg 'Building...'
  autoreconf -i
  ./configure --prefix=/usr --sbindir=/usr/bin --libexecdir=/usr/bin --sysconfdir=/etc --sharedstatedir=/etc --localstatedir=/etc
  make
}

package() {
  cd $_gitname

  msg 'Installing...'
  make DESTDIR="$pkgdir" install
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${_gitname}/LICENSE"
}
