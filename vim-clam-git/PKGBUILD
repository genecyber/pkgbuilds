# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=vim-clam-git
pkgver=v1.3.0.r2.gbea3683
pkgrel=1
pkgdesc="A lightweight Vim plugin for working with shell commands"
arch=('any')
depends=('vim')
makedepends=('git')
groups=('vim-plugins')
url="https://github.com/sjl/clam.vim"
license=('MIT')
source=(${pkgname%-git}::git+https://github.com/sjl/clam.vim)
sha256sums=('SKIP')
provides=('vim-clam')
conflicts=('vim-clam')
install=vimdoc.install

pkgver() {
  cd ${pkgname%-git}
  git describe --long --tags | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

prepare() {
  cd ${pkgname%-git}
  
  msg 'Removing unneeded files...'
  rm -f *.markdown package.sh .hgtags
}

package() {
  cd ${pkgname%-git}

  msg 'Installing...'
  install -dm 755 ${pkgdir}/usr/share/vim/vimfiles/
  tar -c . | tar -x -C ${pkgdir}/usr/share/vim/vimfiles

  msg 'Cleaning up pkgdir...'
  find "$pkgdir" -type d -name .git -exec rm -r '{}' +
}
